<div class="px-4 py-8">    
    <a href="{{ routes.collection_url }}" class="block my-4 text-base text-center text-gray-500 hover:underline">Go back to Collections</a>
    {% paginate collection.products by section.settings.number_of_products_per_page %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
            {% for product in collection.products %}
            {% render 'product-card', product: product %}
            {% else %}
            <p>There are no products inside of the collection.</p>
            {% endfor %}
        </div>
    </div>
    {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>

{% schema %}
{
"name": "Template Collection",
"settings": [
{
"type": "number",
"id": "number_of_products_per_page",
"default": 3,
"label": "Number of products per page"
}
]
}
{% endschema %}